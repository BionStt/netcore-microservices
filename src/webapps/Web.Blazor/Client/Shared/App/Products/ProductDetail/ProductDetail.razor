@using NetMicroservices.ServiceConfig.Nuget
@inject IProductService ProductService;

@if (product is not  null)
{
    <ProductItemContainer>
        <ProductName Name="@product.Data.Name" />
        <ProductImage 
            ProductName="@product.Data.Name"
            ImgUrl="@product.Data.ImgUrl"
            ProductId="@ProductId"  />
        <ProductDescription Description="@product.Data.Description" />
        <ProductPrice Price="@product.Data.Price" />
        <ApplyCouponCTA />
        <CartBuyCTA />
    </ProductItemContainer>
}

@code {
    private ServiceResponse<Product>? product = null;

    [Parameter]
    public Guid ProductId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        product = await ProductService.GetProductAsync(ProductId);
    }
}
